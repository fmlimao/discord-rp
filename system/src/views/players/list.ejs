    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Usu√°rios</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="tablePlayers" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
