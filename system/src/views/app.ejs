<%- contentFor('scripts') %>

<script>

    var apiPath = '<%- apiPath %>';
    var token = '<%- token %>';

    var route = new FMRoute();

    route.get('/', function (vars, next) {
        route.go('/dashboard');
    });

    route.get('/dashboard', function (vars, next) {
        App.currentPage = '/dashboard';
        next();
    });

    route.get('/users', function (vars, next) {
        App.currentPage = '/users';

        App.getUsers();

        next();
    });

    route.get('/whitelist/questions', function (vars, next) {
        App.currentPage = '/whitelist/questions';

        App.getQuestions();

        next();
    });

    route.get('/whitelist/answers', function (vars, next) {
        App.currentPage = '/whitelist/answers';

        App.getAnswers();

        next();
    });

    route.error('404', function (vars, next) {
        App.currentPage = '/404';

        next();
    });

    mixins.push({
        data: {
            pages: {
                users: {
                    lists: {
                        users: {
                            started: false,
                            loading: false,
                            error: false,
                            messages: [],
                            data: [],
                        },
                    },
                },
                whitelistQuestions: {
                    lists: {
                        questions: {
                            started: false,
                            loading: false,
                            error: false,
                            messages: [],
                            data: [],
                        },
                    },
                },
                whitelistAnswers: {
                    lists: {
                        answers: {
                            started: false,
                            loading: false,
                            error: false,
                            messages: [],
                            data: [],
                        },
                    },
                },
            },
        },
        methods: {

            init: function () {
                route.run();
            },

            clearPageList: function (pageName, listName) {
                App.pages[pageName].lists[listName].started = false;
                App.pages[pageName].lists[listName].loading = false;
                App.pages[pageName].lists[listName].error = false;
                App.pages[pageName].lists[listName].messages = [];
                App.pages[pageName].lists[listName].data = [];
            },

            clearPageForm: function (pageName, formName) {
                App.pages[pageName].forms[formName].error = false;
                App.pages[pageName].forms[formName].loading = false;
                App.pages[pageName].forms[formName].messages = [];

                for (let field in App.pages[pageName].forms[formName].fields) {
                    App.pages[pageName].forms[formName].fields[field].value = App.pages[pageName].forms[formName].fields[field].value.trim();
                    App.pages[pageName].forms[formName].fields[field].error = false;
                    App.pages[pageName].forms[formName].fields[field].messages = [];
                }
            },

            getUsers: function () {
                var ajaxCb = (response) => {
                    App.pages.users.lists.users.error = response.error;
                    App.pages.users.lists.users.messages = response.messages;

                    if (!response.error) {
                        for (var i in response.content.users) {
                            App.pages.users.lists.users.data.push(response.content.users[i]);
                        }
                    }

                    App.pages.users.lists.users.loading = false;
                };

                App.clearPageList('users', 'users');
                App.pages.users.lists.users.started = true;
                App.pages.users.lists.users.loading = true;

                axios.get(`${apiPath}/users`, {
                    headers: {
                        'x-access-token': token,
                    },
                })
                    .then(function (response) {
                        ajaxCb(response.data);
                    })
                    .catch(function (error) {
                        ajaxCb(error.response.data);
                    });

            },

            getQuestions: function () {
                var ajaxCb = (response) => {
                    App.pages.whitelistQuestions.lists.questions.error = response.error;
                    App.pages.whitelistQuestions.lists.questions.messages = response.messages;

                    if (!response.error) {
                        for (var i in response.content.questions) {
                            App.pages.whitelistQuestions.lists.questions.data.push(response.content.questions[i]);
                        }
                    }

                    App.pages.whitelistQuestions.lists.questions.loading = false;
                };

                App.clearPageList('whitelistQuestions', 'questions');
                App.pages.whitelistQuestions.lists.questions.started = true;
                App.pages.whitelistQuestions.lists.questions.loading = true;

                axios.get(`${apiPath}/whitelist/questions`, {
                    headers: {
                        'x-access-token': token,
                    },
                })
                    .then(function (response) {
                        ajaxCb(response.data);
                    })
                    .catch(function (error) {
                        ajaxCb(error.response.data);
                    });
            },

            getAnswers: function () {
                var ajaxCb = (response) => {
                    console.log('response', response);
                    App.pages.whitelistAnswers.lists.answers.error = response.error;
                    App.pages.whitelistAnswers.lists.answers.messages = response.messages;

                    if (!response.error) {
                        for (var i in response.content.answers) {
                            App.pages.whitelistAnswers.lists.answers.data.push(response.content.answers[i]);
                        }
                    }

                    App.pages.whitelistAnswers.lists.answers.loading = false;
                };

                App.clearPageList('whitelistAnswers', 'answers');
                App.pages.whitelistAnswers.lists.answers.started = true;
                App.pages.whitelistAnswers.lists.answers.loading = true;

                axios.get(`${apiPath}/whitelist/answers`, {
                    headers: {
                        'x-access-token': token,
                    },
                })
                    .then(function (response) {
                        ajaxCb(response.data);
                    })
                    .catch(function (error) {
                        ajaxCb(error.response.data);
                    });
            },

        },
    });

</script>