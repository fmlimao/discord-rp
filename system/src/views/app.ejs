        <h1>
            Usuários
        </h1>
        <ol class="breadcrumb">
            <li><a href="/#/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-users"></i> Usuários</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="alert" :class="{'alert-danger': lists.users.error, 'alert-success': !lists.users.error}"
            v-if="lists.users.messages.length" v-html="lists.users.messages.join('<br>')"></div>

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Usuários</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body"
                v-if="lists.users.loading || (lists.users.started && !lists.users.loading && !lists.users.data.length)">
                <div class="alert alert-info" v-if="lists.users.loading">Carregando...</div>
                <div class="alert alert-warning"
                    v-if="lists.users.started && !lists.users.loading && !lists.users.data.length">Nenhum usuário
                    cadastrado</div>
            </div>
            <div class="box-body table-responsive no-padding"
                v-if="lists.users.started && !lists.users.loading && lists.users.data.length">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Email</th>
                        </tr>
                        <tr v-for="user in lists.users.data">
                            <td>
                                {{ user.user_id }}
                            </td>
                            <td>
                                {{ user.name }}
                            </td>
                            <td>
                                {{ user.email }}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>


    </section>
</div>

