<%- contentFor('scripts') %>

<script>

    var apiPath = '<%- apiPath %>';
    var token = '<%- token %>';

    var route = new FMRoute();

    route.get('/', function (vars, next) {
        route.go('/dashboard');
    });

    route.get('/dashboard', function (vars, next) {
        App.currentPage = '/dashboard';
        next();
    });

    route.get('/users', function (vars, next) {
        App.currentPage = '/users';

        App.getUsers();

        next();
    });

    route.get('/whitelist/questions', function (vars, next) {
        App.currentPage = '/whitelist/questions';

        App.getQuestions();

        next();
    });

    route.get('/whitelist/answers', function (vars, next) {
        App.currentPage = '/whitelist/answers';

        App.getQuestions();

        next();
    });

    route.error('404', function (vars, next) {
        App.currentPage = '/404';

        next();
    });

    mixins.push({
        data: {
            lists: {
                users: {
                    started: false,
                    loading: false,
                    error: false,
                    messages: [],
                    data: [],
                },
                questions: {
                    started: false,
                    loading: false,
                    error: false,
                    messages: [],
                    data: [],
                },
            },
        },
        methods: {

            init: function () {
                route.run();
            },

            clearlist: function (listName) {
                App.lists[listName].started = false;
                App.lists[listName].loading = false;
                App.lists[listName].error = false;
                App.lists[listName].messages = [];
                App.lists[listName].data = [];
            },

            clearForm: function (formName) {
                App.forms[formName].error = false;
                App.forms[formName].loading = false;
                App.forms[formName].messages = [];

                for (let field in App.forms[formName].fields) {
                    App.forms[formName].fields[field].value = App.forms[formName].fields[field].value.trim();
                    App.forms[formName].fields[field].error = false;
                    App.forms[formName].fields[field].messages = [];
                }
            },

            getUsers: function () {
                var ajaxCb = (response) => {
                    App.lists.users.error = response.error;
                    App.lists.users.messages = response.messages;

                    if (!response.error) {
                        for (var i in response.content.users) {
                            App.lists.users.data.push(response.content.users[i]);
                        }
                    }

                    App.lists.users.loading = false;
                };

                App.clearlist('users');
                App.lists.users.started = true;
                App.lists.users.loading = true;

                axios.get(`${apiPath}/users`, {
                    headers: {
                        'x-access-token': token,
                    },
                })
                    .then(function (response) {
                        ajaxCb(response.data);
                    })
                    .catch(function (error) {
                        ajaxCb(error.response.data);
                    });

            },

            getQuestions: function () {
                var ajaxCb = (response) => {
                    App.lists.questions.error = response.error;
                    App.lists.questions.messages = response.messages;

                    if (!response.error) {
                        for (var i in response.content.questions) {
                            App.lists.questions.data.push(response.content.questions[i]);
                        }
                    }

                    App.lists.questions.loading = false;
                };

                App.clearlist('questions');
                App.lists.questions.started = true;
                App.lists.questions.loading = true;

                axios.get(`${apiPath}/whitelist/questions`, {
                    headers: {
                        'x-access-token': token,
                    },
                })
                    .then(function (response) {
                        ajaxCb(response.data);
                    })
                    .catch(function (error) {
                        ajaxCb(error.response.data);
                    });

            },

        },
    });

</script>