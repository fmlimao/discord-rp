<%- contentFor('body') %>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-users"></i> Players
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li class="active"><i class="fa fa-users"></i> Players</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
                    <i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip"
                    title="Remove">
                    <i class="fa fa-times"></i></button>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usu√°rio</th>
                    <th>Avatar</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="member in members">
                    <td>
                        {{ member.id }}
                    </td>
                    <td>
                        <div>
                            {{ member.usernameNick }}
                        </div>
                        <div v-if="member.nick" class="text-muted">
                            {{ '@' + member.username + '#' + member.discriminator }}
                        </div>
                    </td>
                    <td>
                        <img :src="member.avatarUrl"
                            :alt="member.nick ? member.nick : member.username + ' ' + member.discriminator"
                            class="img img-circle img-thumbnail" style="width: 64px;">
                    </td>
                    <td>
                        <span v-for="role in member.roles" class="role pull-left" :style="`border-color: #${role.color}; margin-right: 8px; margin-bottom: 8px;`">
                            {{ role.name }}
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->


<%- contentFor('scripts') %>
<script>
    mixins.push({
        data: {
            members: JSON.parse(`<%- membersJson %>`),
        },
    });
</script>